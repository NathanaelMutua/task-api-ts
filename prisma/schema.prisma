generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model task{
  id          String   @id @default(uuid()) @map("task_id")
  title       String   @map("task_title")
  description String   @map("task_description")
  isCompleted Boolean  @default(false) @map("task_completed")
  createdAt   DateTime @default(now()) @map("task_created_time")
  updatedAt   DateTime @updatedAt @map("task_updated_time")
  isDeleted   Boolean  @default(false)

  @@map("tasks")
}